@page "/majors/create"
@using Microsoft.EntityFrameworkCore
@using SIMS.Data
@inject IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create Major</PageTitle>

<div class="container-fluid p-4">
    <div class="d-flex align-items-center mb-4">
        <a href="/majors" class="btn btn-outline-secondary me-3"><i class="bi bi-arrow-left"></i></a>
        <h1 class="mb-0"><i class="bi bi-plus-circle text-primary"></i> Create New Major</h1>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <EditForm method="post" Model="Major" OnValidSubmit="AddMajor" FormName="create-major" Enhance>
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger" />
                        <div class="form-floating mb-3">
                            <InputText id="name" @bind-Value="Major.Name" class="form-control"
                                placeholder="Name" />
                            <label>Name</label>
                            <ValidationMessage For="() => Major.Name" class="text-danger" />
                        </div>
                        <div class="mb-3">
                            <label for=" departmentid" class="form-label">Department:</label>
                            <InputSelect id="departmentid" @bind-Value="Major.DepartmentId" class="form-control">
                                @foreach (var department in Departments)
                                {
                                    <option value="@department.Id">@department.Name</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="() => Major.DepartmentId" class="text-danger" />
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a class="btn btn-outline-secondary" href="/majors">Cancel</a>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private Major Major { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddMajor()
    {
        using var context = DbFactory.CreateDbContext();
        context.Majors.Add(Major);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/majors");
    }
    public List<Department> Departments { get; set; } = new();
    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        Departments = await context.Departments.ToListAsync();
    }
}