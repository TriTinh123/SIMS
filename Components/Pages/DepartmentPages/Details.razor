@page "/departments/details"
@using Microsoft.EntityFrameworkCore
@using SIMS.Data
@inject IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Department Details</PageTitle>

<div class="container-fluid p-4">
    <div class="d-flex align-items-center mb-4">
        <a href="/departments" class="btn btn-outline-secondary me-3">
            <i class="bi bi-arrow-left"></i>
        </a>
        <h1 class="mb-0">
            <i class="bi bi-info-circle text-primary"></i> Department Details
        </h1>
    </div>

    @if (department is null)
    {
        <div class="card shadow-sm">
            <div class="card-body">Loading...</div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@department.Name</dd>
                </dl>
                <a class="btn btn-outline-secondary" href="/departments">Back to List</a>
            </div>
        </div>
    }
</div>

@code {
    private Department? department;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [Inject]
    private IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory2 { get; set; } = default!; // keep explicit injection for clarity

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        department = await context.Departments.FirstOrDefaultAsync(m => m.Id == Id);

        if (department is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
