@page "/semesters/create"
@using Microsoft.EntityFrameworkCore
@using SIMS.Data
@inject IDbContextFactory<SIMS.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create Semester</PageTitle>

<div class="container-fluid p-4">
 <div class="d-flex align-items-center mb-4">
 <a href="/semesters" class="btn btn-outline-secondary me-3"><i class="bi bi-arrow-left"></i></a>
 <h1 class="mb-0"><i class="bi bi-plus-circle text-primary"></i> Create New Semester</h1>
 </div>

 <div class="row">
 <div class="col-md-6">
 <div class="card shadow-sm">
 <div class="card-body">
 <EditForm method="post" Model="Semester" OnValidSubmit="AddSemester" FormName="create-semester" Enhance>
 <DataAnnotationsValidator />
 <ValidationSummary class="text-danger" />
 <div class="form-floating mb-3">
 <InputText id="name" @bind-Value="Semester.Name" class="form-control" placeholder="Name" />
 <label>Name</label>
 <ValidationMessage For="() => Semester.Name" class="text-danger" />
 </div>
 <div class="d-flex gap-2">
 <button type="submit" class="btn btn-primary">Create</button>
 <a class="btn btn-outline-secondary" href="/semesters">Cancel</a>
 </div>
 </EditForm>
 </div>
 </div>
 </div>
 </div>
</div>

@code {
 [SupplyParameterFromForm]
 private Semester Semester { get; set; } = new();

 // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
 private async Task AddSemester()
 {
 using var context = DbFactory.CreateDbContext();
 context.Semesters.Add(Semester);
 await context.SaveChangesAsync();
 NavigationManager.NavigateTo("/semesters");
 }
}
