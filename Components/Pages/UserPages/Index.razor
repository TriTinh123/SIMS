@page "/weathers"
@using SIMS.Pages.WeatherPages
@using Microsoft.AspNetCore.Components.QuickGrid
@inject NavigationManager NavigationManager

<PageTitle>Weathers</PageTitle>

<div class="container-fluid p-4">
 <div class="d-flex justify-content-between align-items-center mb-4">
 <h1 class="mb-0"><i class="bi bi-cloud-sun text-primary"></i> Weather</h1>
 <a href="weathers/create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New</a>
 </div>

 <div class="card shadow-sm">
 <div class="card-body">
 <QuickGrid Class="table table-hover" Items="WeatherStore.GetAll().AsQueryable()">
 <PropertyColumn Title="Date" Property="w => w.Date" />
 <PropertyColumn Title="Temp (C)" Property="w => w.TemperatureC" />
 <PropertyColumn Title="Temp (F)" Property="w => w.TemperatureF" />
 <PropertyColumn Title="Summary" Property="w => w.Summary" />
 <TemplateColumn Title="Actions" Context="w">
 <div class="btn-group" role="group">
 <a href="@($"weathers/edit?id={w.Id}")" class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil"></i> Edit</a>
 <a href="@($"weathers/details?id={w.Id}")" class="btn btn-outline-info btn-sm"><i class="bi bi-info-circle"></i> Details</a>
 <a href="@($"weathers/delete?id={w.Id}")" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
 </div>
 </TemplateColumn>
 </QuickGrid>
 </div>
 </div>
</div>

